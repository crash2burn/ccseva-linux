{
  "appId": "com.ccseva.app",
  "productName": "CCSeva",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "node_modules/**/*",
    "assets/**/*"
  ],
  "mac": {
    "category": "public.app-category.developer-tools",
    "icon": "assets/icon.icns",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "extendInfo": {
      "LSUIElement": true,
      "CFBundleDisplayName": "CCSeva",
      "CFBundleName": "CCSeva",
      "CFBundleExecutable": "CCSeva",
      "NSHumanReadableCopyright": "Copyright Â© 2024 CCSeva. All rights reserved.",
      "CFBundleDocumentTypes": [],
      "LSMinimumSystemVersion": "10.15.0"
    }
  },
  "dmg": {
    "title": "CCSeva",
    "icon": "assets/icon.icns"
  },
  "win": {
    "target": "nsis"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "tar.gz",
        "arch": ["x64"]
      }
    ],
    "category": "Development",
    "icon": "assets/icon.svg",
    "desktop": {
      "entry": {
        "StartupWMClass": "CCSeva"
      }
    }
  }
}